{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "./ts",
    "outDir": "./js",
    "strict": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}